<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac"
    tools:context=".register">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Medical Application For Help"
        android:textColor="#B89325"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="create new Account"
        android:textColor="#EDE8D8"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

    <EditText
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#131313"
        android:fontFamily="@font/aclonica"
        android:hint="Full Name"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:inputType="textAutoComplete"
        android:textSize="14sp"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="#131313"
        android:fontFamily="@font/aclonica"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#131313"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="#131313"
        android:ems="10"
        android:maxLength="10"
        android:digits="0123456789"
        android:fontFamily="@font/aclonica"
        android:hint="Phone Number"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="14sp"/>


                    <EditText
                        android:id="@+id/building"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:background="#131313"
                        android:ems="10"
                        android:fontFamily="@font/aclonica"
                        android:hint="Building no.,Home, Hospital name"
                        android:padding="10dp"
                        android:inputType="textAutoComplete"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:background="#131313"
                        android:ems="10"
                        android:fontFamily="@font/aclonica"
                        android:hint="Area, Colony, Street, Sector, Village"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"
                        android:inputType="textAutoComplete"
                        android:textColorHint="#FFFFFF"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/lan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:background="#131313"
                        android:ems="10"
                        android:fontFamily="@font/aclonica"
                        android:hint="Landmark e.g.near Apollo Hospital"
                        android:padding="10dp"
                        android:inputType="textAutoComplete"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:background="#131313"
                        android:ems="10"
                        android:fontFamily="@font/aclonica"
                        android:hint="Town/City"
                        android:inputType="textAutoComplete"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textSize="14sp"/>



    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#fff"
        android:clickable="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:drawSelectorOnTop="true"
        android:entries="@array/abc"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        />
                    <Button
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="16dp"
                        android:text="Register"
                        app:layout_constraintBottom_toBottomOf="parent" />


                        <TextView
                            android:id="@+id/loginhere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login Here"
                            android:textColor="#B89325"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"/>

                </LinearLayout>
            </ScrollView>
            </LinearLayout>
</RelativeLayout>